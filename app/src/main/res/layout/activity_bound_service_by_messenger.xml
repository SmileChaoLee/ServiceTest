<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffea"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".BoundServiceByMessengerActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff00ff00"
        android:textColor="#ff000000"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:text="Bound Service (Messenger)"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="36dp"
        android:textStyle="bold|italic"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="120dp"
        android:maxHeight="120dp"
        android:scaleType="fitCenter"
        android:src="@drawable/smile"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:layout_below="@+id/titleText"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/companyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:padding="0dp"
        android:text="Smile Information Inc."
        android:textColor="#ff0000ff"
        android:textSize="30dp"
        android:layout_below="@+id/imageButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:padding="0dp"
        android:text=""
        android:textColor="#ffffff00"
        android:background="#ff000000"
        android:textSize="24dp"
        android:layout_below="@+id/companyName"
        android:layout_alignLeft="@+id/companyName"
        android:layout_alignRight="@+id/companyName"
        android:layout_alignStart="@+id/companyName"
        android:layout_alignEnd="@+id/companyName"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/startBindService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginTop="2dp"
        android:padding="0dp"
        android:text="Start Service"
        android:layout_below="@+id/messageText"
        android:layout_alignLeft="@+id/companyName"
        android:layout_alignRight="@+id/companyName"
        android:layout_alignStart="@+id/companyName"
        android:layout_alignEnd="@+id/companyName" />

    <Button
        android:id="@+id/unbindStopService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginTop="2dp"
        android:padding="0dp"
        android:text="Stop Service"
        android:layout_below="@+id/startBindService"
        android:layout_alignLeft="@+id/companyName"
        android:layout_alignRight="@+id/companyName"
        android:layout_alignStart="@+id/companyName"
        android:layout_alignEnd="@+id/companyName" />

    <Button
        android:id="@+id/playMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginTop="2dp"
        android:padding="0dp"
        android:text="Play Music"
        android:layout_below="@+id/unbindStopService"
        android:layout_alignLeft="@+id/companyName"
        android:layout_alignRight="@+id/companyName"
        android:layout_alignStart="@+id/companyName"
        android:layout_alignEnd="@+id/companyName" />

    <Button
        android:id="@+id/pauseMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginTop="2dp"
        android:padding="0dp"
        android:text="Pause Music"
        android:layout_below="@+id/playMusic"
        android:layout_alignLeft="@+id/companyName"
        android:layout_alignRight="@+id/companyName"
        android:layout_alignStart="@+id/companyName"
        android:layout_alignEnd="@+id/companyName" />

    <Button
        android:id="@+id/exitBoundService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginTop="5dp"
        android:padding="0dp"
        android:text="Exit BoundService"
        android:background="#ffff0000"
        android:layout_below="@+id/pauseMusic"
        android:layout_alignLeft="@+id/companyName"
        android:layout_alignRight="@+id/companyName"
        android:layout_alignStart="@+id/companyName"
        android:layout_alignEnd="@+id/companyName" />

</RelativeLayout>